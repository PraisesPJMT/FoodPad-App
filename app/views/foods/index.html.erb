<h1>Foods</h1>


<%= link_to "Add food", new_food_path, class: "navlink" %>
<div class="table-container">
<table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Measurement</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
        <tr id="<%= food %>">
          <td><%= food.name%></td>
          <td><%= food.measurement_unit%></td>
          <td>$<%= food.price%></td>
          <td><%= food.quantity%></td>
          <td>
              <%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </td>
        </tr> 
  <% end %>
</tbody>
</table>
</div>